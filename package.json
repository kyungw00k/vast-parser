{
  "name": "vast.js",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kyungw00k/VAST.js.git",
  "author": "Kyungwook Park <parksama@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --format=node_modules/eslint-formatter-pretty 'src/**/*.@(js|jsx)'",
    "lint:msg": "validate-commit-msg",
    "commit": "git cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "precommit": "npm run lint",
    "commitmsg": "npm run lint:msg"
  },
  "eslintConfig": {
    "extends": "standard"
  },
  "config": {
    "validate-commit-msg": {
      "preset": "angular",
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-plugin-espower": "^2.3.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.24.0",
    "browser-env": "^2.0.25",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "husky": "^0.13.2",
    "json-beautify": "^1.0.1",
    "sinon": "^2.1.0",
    "validate-commit-msg": "^2.11.2"
  },
  "dependencies": {
    "ava": "^0.18.2",
    "jxon": "^2.0.0-beta.4"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
